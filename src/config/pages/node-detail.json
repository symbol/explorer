{
	"path": "/nodes/:publicKey",
	"name": "node-detail",
	"meta": {
		"group": "detail-page",
		"keepAliveGoTo": []
	},
	"props": {
		"layout": "flex",
		"storeNamespaces": [],
		"initActions": ["node/fetchNodeInfo"],
		"schema": [
			{
				"layoutOptions": "full-width",
				"type": "CardTable",
				"title": "nodeDetailTitle",
				"managerGetter": "node/info",
				"errorMessage": "nodeDetailError",
				"pagination": "none",
				"fields": [
					"friendlyName",
					"roles",
					"version",
					"host",
					"port",
					"apiEndpoint",
					"networkGenerationHashSeed",
					"network",
					"networkIdentifier",
					"mainPublicKey",
					"address"
				]
			},
			{
				"layoutOptions": "adaptive",
				"type": "NodesMapWidget",
				"title": "nodeLocationMapTitle",
				"height": 350,
				"maxWidth": 500,
				"zoom": 1,
				"showPopup": false,
				"managerGetter": "node/info",
				"dataGetter": "node/mapInfo",
				"hideDependOnGetter": "node/hostInfoManager",
				"errorMessage": "Failed to fetch node list"
			},
			{
				"layoutOptions": "adaptive",
				"type": "CardTable",
				"title": "nodeHostDetailTitle",
				"managerGetter": "node/info",
				"dataGetter": "node/geoLocation",
				"hideDependOnGetter": "node/hostInfoManager",
				"errorMessage": "nodeDetailError",
				"pagination": "none",
				"fields": [
					"continent",
					"country",
					"region",
					"city",
					"isp"

				]
			},
			{
				"layoutOptions": "adaptive",
				"type": "CardTable",
				"title": "nodeApiStatusTitle",
				"managerGetter": "node/info",
				"dataGetter": "node/apiStatus",
				"errorMessage": "nodeDetailError",
				"pagination": "none",
				"hideEmptyData": true,
				"fields": [
					"connectionStatus",
					"lightNodeStatus",
					"isHttpsEnabled",
					"restVersion"
				]
			},
			{
				"layoutOptions": "full-width",
				"type": "CardTable",
				"title": "nodeChainInfoTitle",
				"managerGetter": "node/info",
				"dataGetter": "node/chainInfo",
				"errorMessage": "nodeDetailError",
				"pagination": "none",
				"hideEmptyData": true
			}
		]
	}
}