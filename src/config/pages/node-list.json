{
    "path": "/nodes",
    "name": "nodes",
    "meta": {
        "group": "list-page",
        "keepAliveGoTo": ["detail-page"]
    },
    "props": {
        "layout": "flex",
        "storeNamespaces": ["node"],
        "schema": [
            {
                "layoutOptions": "full-width",
                "type": "NodesMapWidget",
                "title": "nodesTitle",
                "height": 500,
                "maxWidth": 1500,
                "zoom": 2,
                "minZoom": 2,
				"managerGetter": "node/hostInfoManager",
				"dataGetter": "node/nodeList",
                "errorMessage": "Failed to fetch node list",
				"hasFilter": true,
				"hideOnError": true
            },
            {
                "layoutOptions": "full-width",
                "type": "CardTable",
                "title": "nodesTitle",
                "managerGetter": "node/timeline",
                "errorMessage": "Failed to fetch node list",
                "pagination": "client",
                "pageSize": 1000,
                "hasFilter": true,
                "fields": [
                    "index",
                    "host",
                    "friendlyName",
                    "roles",
                    "nodePublicKey",
                    "version",
                    "network"
                ],
                "mobileFields": [
                    "host",
                    "friendlyName",
                    "nodePublicKey"
                ]
            }
        ]
    }
}